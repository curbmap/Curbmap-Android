<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/typeOfRestriction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_of_restriction"
        android:textSize="@dimen/header_size"
        android:textStyle="bold" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/typeOfRestrictionRadioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/typeOfRestriction"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/timeLimitParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_limit_parking" />

        <RadioButton
            android:id="@+id/noParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_parking" />

        <RadioButton
            android:id="@+id/noStopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_stopping" />

        <RadioButton
            android:id="@+id/streetCleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/street_cleaning" />

        <RadioButton
            android:id="@+id/fireHydrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fire_hydrant" />

        <RadioButton
            android:id="@+id/permitParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permit_parking_districts" />

        <RadioButton
            android:id="@+id/disabledParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disabled_parking" />


        <RadioButton
            android:id="@+id/parkingMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parking_meter" />


        <RadioButton
            android:id="@+id/customTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_type" />
    </RadioGroup>


    <TextView
        android:id="@+id/costLabel"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeOfRestrictionRadioGroup"
        android:layout_toStartOf="@+id/cost"
        android:labelFor="@+id/cost"
        android:text="@string/cost" />

    <EditText
        android:id="@+id/cost"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeOfRestrictionRadioGroup"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/dollarsLabel"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cost"
        android:layout_toEndOf="@+id/costLabel"
        android:text="@string/dollars"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/perLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cost"
        android:layout_alignBottom="@+id/cost"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/cost"
        android:labelFor="@+id/per"
        android:text="@string/per" />

    <EditText
        android:id="@+id/per"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cost"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/perLabel"
        android:inputType="number" />

    <TextView
        android:id="@+id/minutesLabel"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/per"
        android:layout_alignBottom="@+id/per"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/per"
        android:text="@string/minutes" />


    <TextView
        android:id="@+id/timeLimitLabel"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dollarsLabel"
        android:layout_marginTop="20dp"
        android:labelFor="@+id/timeLimitNumber"
        android:text="@string/time_limit" />

    <EditText
        android:id="@+id/timeLimitNumber"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeLimitLabel"
        android:layout_toEndOf="@+id/timeLimitLabel"
        android:inputType="number" />

    <Spinner
        android:id="@+id/timeLimitSpinner"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timeLimitNumber"
        android:layout_toEndOf="@id/timeLimitNumber"
        android:entries="@array/time_units" />


    <EditText
        android:id="@+id/customTypeText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLimitLabel"
        android:hint="@string/enter_custom_type" />


    <EditText
        android:id="@+id/permitText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customTypeText"
        android:hint="@string/enter_permit_parking_district" />

</RelativeLayout>