<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yourPlacesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Places"
        android:textAlignment="center"
        android:textColor="@color/colorTitle"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/workIcon"
        android:layout_alignTop="@+id/homeAddress"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/workIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeIcon"
        android:layout_marginStart="51dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/work" />


    <TextView
        android:id="@+id/homeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourPlacesTitle"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/homeIcon"
        android:text="Home\n123 Main St" />

    <TextView
        android:id="@+id/workAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/homeAddress"
        android:layout_alignTop="@+id/workIcon"
        android:text="Work\n525 S Hewitt St" />
</RelativeLayout>