<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include layout="@layout/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/yourContributionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:text="@string/your_contributions"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/uploads"
        android:id="@+id/uploadsTitle"
        android:layout_below="@id/yourContributionsTitle"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/uploadsGridView"
        android:layout_below="@id/uploadsTitle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/uploaded"
        android:id="@+id/uploadedTitle"
        android:layout_below="@id/uploadsGridView"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/uploadedGridView"
        android:layout_below="@id/uploadedTitle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />



    <Button
        android:id="@+id/emailContributionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clearContributionsButton"
        android:layout_centerHorizontal="true"
        android:text="@string/share_contributions" />


    <Button
        android:id="@+id/clearContributionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/clear_contributions" />


</RelativeLayout>