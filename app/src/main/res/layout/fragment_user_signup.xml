<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/description_logo"
        app:srcCompat="@drawable/curbmap_256x256" />

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/confirmEmailField"
        android:layout_below="@+id/logo"
        android:layout_marginTop="11dp"
        android:background="@drawable/back"
        android:hint="@string/username"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_below="@+id/usernameField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/back"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/passwordField"
        android:layout_below="@+id/passwordField"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/confirmEmailField"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/emailField"
        android:layout_below="@+id/emailField"
        android:layout_marginTop="12dp"
        android:background="@drawable/back"
        android:hint="@string/confirm_email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="16sp" />


    <Button
        android:id="@+id/signUpButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmEmailField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/sign_up" />

</RelativeLayout>